<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LL"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/TvLeft"
            android:text="手机：" />

        <EditText
            android:id="@+id/ed_sj"
            style="@style/TvRight"
            android:hint="请输入账号"
            android:text="admin"/>

    </LinearLayout>


    <LinearLayout
        style="@style/LL"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/TvLeft"
            android:text="密码：" />

        <EditText
            android:id="@+id/ed_pwd"
            style="@style/TvRight"
            android:hint="请输入密码"
            android:text="666666" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_dl"
        style="@style/btnSty"
        android:layout_marginTop="30dp"
        android:text="登录" />

    <Button
        android:id="@+id/btn_zc"
        style="@style/btnSty"
        android:text="注册"
        android:visibility="gone" />

</LinearLayout>